{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
